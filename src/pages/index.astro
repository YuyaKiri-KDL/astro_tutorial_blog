---
// ---(コードフェンス): スクリプトを記述

// importするだけでページ全体にstyleが適用される
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";

const pageTitle: string = "My Astro Site";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <!-- ナビゲーションリンク -->
    <!--Note: 多くのフレームワークとは異なり、Astro は標準の HTML<a>要素を使用してページ間を移動し (ルートとも呼ばれます)、従来のページの更新を行います。 -->
    <!-- <a href="/">Home</a>
    <a href="/about/">About</a>
    <a href="/blog/">Blog</a> -->
    <!-- importしたcomponentを設置 -->
    <Navigation />
    <!-- 本文 -->
    <h1>{pageTitle}</h1>
  </body>
</html>
